{{#each results}}
<h2>{{this.article}}</h2>
<li>{{this.link}}</li>
{{#each this.comments}}
<p>{{this}}</p>
{{/each}}
<form action="/comments" method="post">
    Comment: <input type="text" name="comment" /><br />
    <input type="submit" name="submit" value="Submit" />
    <input type="hidden" name="link" value={{this.link}} />
</form>
{{/each}}